<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>ecommerce</display-name>
    <welcome-file-list>
	<welcome-file>
		index.jsp
	</welcome-file>
  </welcome-file-list>
   <servlet>
    <description></description>
    <display-name>LoginController</display-name>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>ecommerce.controllers.LoginController</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>HomeController</display-name>
    <servlet-name>HomeController</servlet-name>
    <servlet-class>ecommerce.controllers.HomeController</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>CategoryController</display-name>
    <servlet-name>CategoryController</servlet-name>
    <servlet-class>ecommerce.controllers.CategoryController</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>ProductBrowsingController</display-name>
    <servlet-name>ProductBrowsingController</servlet-name>
    <servlet-class>ecommerce.controllers.ProductBrowsingController</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>ProductOrderController</display-name>
    <servlet-name>ProductOrderController</servlet-name>
    <servlet-class>ecommerce.controllers.ProductOrderController</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>ShoppingCartController</display-name>
    <servlet-name>ShoppingCartController</servlet-name>
    <servlet-class>ecommerce.controllers.ShoppingCartController</servlet-class>
  </servlet>
  <servlet>
    <description></description>
    <display-name>ProductController</display-name>
    <servlet-name>ProductController</servlet-name>
    <servlet-class>ecommerce.controllers.ProductController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/LoginController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HomeController</servlet-name>
    <url-pattern>/HomeController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/ecommerce/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CategoryController</servlet-name>
    <url-pattern>/CategoryController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductBrowsingController</servlet-name>
    <url-pattern>/ProductBrowsingController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductOrderController</servlet-name>
    <url-pattern>/ProductOrderController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShoppingCartController</servlet-name>
    <url-pattern>/ShoppingCartController</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>ProductController</servlet-name>
    <url-pattern>/ProductController</url-pattern>
  </servlet-mapping>
  <resource-ref>
    <description>Connection Pool</description>
    <res-ref-name>jdbc/confluence</res-ref-name>
    <res-type>javax.sql.Datasource</res-type>
    <res-auth>Container</res-auth>
</resource-ref>
</web-app>